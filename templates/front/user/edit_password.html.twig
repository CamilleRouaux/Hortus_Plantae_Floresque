{% extends 'base.html.twig' %}

{% block title %}Edition du mot de passe{% endblock %}

{% block body %}
    <div class="container">
        <div class="d-flex justify-content-center my-5"><a class="btn btn-success mb-3 " href="{{ path('app_user_profile') }}">Retourner sur votre profil</a></div>
        <div class="row">
            <div class="col-md-6 offset-md-3">
                
                <h1 class="text-center mb-4">Modifier votre mot de passe :</h1>

                {{ form_start(form) }}
                <div class="form-group">
                    {{ form_widget(form) }}
                </div>
                <button type="submit" class="btn btn-primary">Modifier</button>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
