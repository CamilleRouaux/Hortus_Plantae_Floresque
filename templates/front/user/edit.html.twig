{% extends 'back-base.html.twig' %}

{% block title %}User Update{% endblock %}

{% block body %}

<div class="container-xl my-5 p-5 ">
<div class="d-flex justify-content-start mt-5"><a class="btn btn-success mb-3 " href="{{ path('app_user_profile') }}">Retourner sur votre profil</a></div>
    <h1>Modifier les informations de votre compte : </h1>

    {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}

    <div class="form-group">
        <label for="{{ form.firstname.vars.id }}"></label>
        {{ form_row(form.firstname) }}
    </div>

    <div class="form-group">
        <label for="{{ form.lastname.vars.id }}"></label>
        {{ form_row(form.lastname) }}
    </div>

    <div class="form-group">
        <label for="{{ form.email.vars.id }}"></label>
        {{ form_row(form.email) }}
    </div>

    <div class="form-group">
        <label for="{{ form.city.vars.id }}"></label>
        {{ form_row(form.city) }}
    </div>

    <div class="form-group">
        <label for="{{ form.country.vars.id }}"></label>
        {{ form_row(form.country) }}
    </div>


    <button class="btn btn-primary">Modifier</button>
    {{ form_end(form) }}
{% endblock %}
