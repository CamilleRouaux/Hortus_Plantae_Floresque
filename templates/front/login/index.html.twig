{% extends 'base.html.twig' %}
{% block title %}Se connecter{% endblock %}

{% block body %}
<div class="container-xl mt-5 p-5 text-center">
  {% if error %}
      <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
  {% endif %}

  <div class="login-box ">
    <h1>Se connecter :</h1>
    <form action="{{ path('app_loguser') }}" method="post" >
      <div class="user-box">
        <input type="text" name="_username" required="" value="{{ last_username }}">
        <label for="username">Email:</label>
      </div>
      <div class="user-box">
        <input type="password" name="_password" required="true" class="password">      
        <label for="password">Mot de passe </label>
      </div>
      <input type="submit" value="Connexion" id="login-button" >
    </form>
    <a class="btn mb-3" href="{{ path("app_user_create") }}" id="register-button">S'inscrire</a>
  </div>
</div>
{% endblock %}